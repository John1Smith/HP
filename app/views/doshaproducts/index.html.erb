<h1>Listing Doshaproducts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Dosha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doshaproducts.each do |doshaproduct| %>
      <tr>
        <td><%= doshaproduct.product.name %></td>
        <td><%= doshaproduct.dosha.name %></td>
        <td><%= link_to 'Show', doshaproduct %></td>
        <td><%= link_to 'Edit', edit_doshaproduct_path(doshaproduct) %></td>
        <td><%= link_to 'Destroy', doshaproduct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

