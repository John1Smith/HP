<p id="notice"><%= notice %></p>

<h1>Listing Compositionproducts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Composition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compositionproducts.each do |compositionproduct| %>
      <tr>
        <td><%= compositionproduct.product.name %></td>
        <td><%= compositionproduct.composition.try(:name) %></td>
        <td><%= link_to 'Show', compositionproduct %></td>
        <td><%= link_to 'Edit', edit_compositionproduct_path(compositionproduct) %></td>
        <td><%= link_to 'Destroy', compositionproduct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

